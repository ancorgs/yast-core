{

    // converts list of strings to path
    global define list2path(list strs) ``{
        path p = .;
        if(p != .)
        {
            // can this ever happen? it does :(
            y2error("this is very strange, p is %1", p);
        }
        foreach(`e, strs, ``{p = add (p, e);});
        return p;
    }

    list2path(["a"]);  // first call
    list2path(["b"]);  // second call

