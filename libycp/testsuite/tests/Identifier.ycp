{
  module "test";

  export this_is_global;

  integer a = 1;
  global integer this_is_global = 2;
  // implicit: return nil;
}

{
  integer a = 55;

  // should be [2, nil, 55]
  return [ test::this_is_global, ::a, a ];
}

{
  global integer a = 55;	// this is accessible via ::a

  // should be [2, 55, 42]
  //   and a warning about local a shadowing global a

  return { integer a = 42; return [ test::this_is_global, ::a, a ]; };
}

