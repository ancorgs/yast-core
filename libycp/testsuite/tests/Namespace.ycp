{
   module "example";

   define localFunction () ``{
	return 42;
   }

   global define globalFunction () ``{
	return 4711;
   }

   global define mixedFunction() ``{
	return globalFunction() + localFunction();
   }
}

{
   return (example::globalFunction() == 4711);
}

{
   return (example::localFunction() == nil);
}

{
   return (example::mixedFunction() == 4753);
}


